{
  "name": "seminarski-formalne-metode",
  "version": "1.0.0",
  "description": "Seminarski rad iz predmeta Formalne metode - Quality Assurance Testiranje",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/searchTests.js --timeout 30000",
    "test:all": "mocha tests/**/*.js --timeout 30000",
    "test:ep": "mocha tests/searchTests.js --grep \"Equivalence Partitioning\" --timeout 30000",
    "test:bva": "mocha tests/searchTests.js --grep \"Boundary Value Analysis\" --timeout 30000",
    "test:dt": "mocha tests/searchTests.js --grep \"Decision Table Testing\" --timeout 30000",
    "test:eg": "mocha tests/searchTests.js --grep \"Error Guessing\" --timeout 30000",
    "test:exploratory": "mocha tests/exploratoryTests.js --timeout 30000",
    "test:headless": "mocha tests/searchTests.js --timeout 30000 --reporter mochawesome",
    "test:report": "mocha tests/searchTests.js --timeout 30000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=test-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm install",
    "start": "node index.js"
  },
  "keywords": [
    "testing",
    "selenium",
    "mocha",
    "chai",
    "quality-assurance",
    "formal-methods"
  ],
  "author": "Vaše Ime <vaš.email@fit.ba>",
  "license": "MIT",
  "dependencies": {
    "selenium-webdriver": "^4.16.0",
    "chromedriver": "^120.0.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vaš-username/seminarski-formalne-metode.git"
  },
  "bugs": {
    "url": "https://github.com/vaš-username/seminarski-formalne-metode/issues"
  },
  "homepage": "https://github.com/vaš-username/seminarski-formalne-metode#readme",
  "directories": {
    "test": "tests"
  },
  "mocha": {
    "require": [
      "tests/testSetup.js"
    ],
    "reporter": "spec",
    "timeout": 30000,
    "exit": true
  }
}